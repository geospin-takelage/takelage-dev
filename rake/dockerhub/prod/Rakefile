require 'rake'

namespace :dockerhub do
  desc 'Create and deploy prod image to dockerhub'
  task :prod => %w(test
                   local:container:stop
                   image:prod:build
                   image:prod:test
                   git:tag
                   dockerhub:prod:registry:tag
                   dockerhub:prod:registry:login
                   dockerhub:prod:registry:push)
end
